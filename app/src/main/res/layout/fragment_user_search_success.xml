<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainApp.UserSearchSuccessFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/userSearchData"
        tools:text="@string/userData"
        android:layout_margin="@dimen/textview_corners"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.25" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userSearchData"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/start_messaging"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        app:cornerRadius="@dimen/textview_corners"
        android:shadowColor="@color/colorAccent"
        android:textColor="@android:color/black"
        app:backgroundTint="@color/orange" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/no"
        app:layout_constraintVertical_bias="0.05"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        app:cornerRadius="@dimen/textview_corners"
        android:shadowColor="@color/colorAccent"
        android:textColor="@android:color/black"
        app:backgroundTint="@color/orange" />


</androidx.constraintlayout.widget.ConstraintLayout>